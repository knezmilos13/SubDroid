<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/pozadina_interfejsa" />
            <corners
                android:radius="1px"
                android:bottomLeftRadius="0px"
                android:bottomRightRadius="4px"
                android:topLeftRadius="0dp"
                android:topRightRadius="0px" />
        </shape>
    </item>
    <item
        android:left="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/kontrole_linija" />
            <corners
                android:radius="1px"
                android:bottomLeftRadius="0px"
                android:bottomRightRadius="4px"
                android:topLeftRadius="0dp"
                android:topRightRadius="0px" />
        </shape>
    </item>
    <item
        android:left="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/pozadina_interfejsa" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="0dp"
                android:top="0dp" />
            
            <corners
                android:radius="1px"
                android:bottomLeftRadius="0px"
                android:bottomRightRadius="4px"
                android:topLeftRadius="0dp"
                android:topRightRadius="0px" />
        </shape>
    </item>

</layer-list>