<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/pozadina_interfejsa" />
            <corners
                android:radius="1px"
                android:bottomLeftRadius="0px"
                android:bottomRightRadius="0px"
                android:topLeftRadius="0dp"
                android:topRightRadius="4px" />
        </shape>
    </item>
    <item
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/kontrole_linija" />
            <corners
                android:radius="1px"
                android:bottomLeftRadius="0px"
                android:bottomRightRadius="0px"
                android:topLeftRadius="0dp"
                android:topRightRadius="4px" />
        </shape>
    </item>
    <item
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/pozadina_interfejsa" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="10dp"
                android:top="10dp" />
            
            <corners
                android:radius="1px"
                android:bottomLeftRadius="0px"
                android:bottomRightRadius="0px"
                android:topLeftRadius="0dp"
                android:topRightRadius="4px" />
        </shape>
    </item>

</layer-list>