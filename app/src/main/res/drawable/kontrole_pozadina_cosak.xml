<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/standard_bg_color" />
            <corners
                android:radius="1px"
                android:bottomLeftRadius="0px"
                android:bottomRightRadius="0px"
                android:topLeftRadius="4dp"
                android:topRightRadius="0px" />
        </shape>
    </item>
    <item
        android:left="3dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/kontrole_linija" />
            <corners
                android:radius="1px"
                android:bottomLeftRadius="0px"
                android:bottomRightRadius="0px"
                android:topLeftRadius="4dp"
                android:topRightRadius="0px" />
        </shape>
    </item>
    <item
        android:left="6dp"
        android:top="6dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/standard_bg_color" />

            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="0dp"
                android:top="10dp" />
            
            <corners
                android:radius="1px"
                android:bottomLeftRadius="0px"
                android:bottomRightRadius="0px"
                android:topLeftRadius="4dp"
                android:topRightRadius="0px" />
        </shape>
    </item>

</layer-list>