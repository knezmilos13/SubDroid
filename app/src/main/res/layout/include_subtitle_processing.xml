<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/subtitle_processing_progress"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackish_transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminate="true"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/subtitle_processing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_content_margin"
        style="@style/common_progress_text"
        tools:text="@string/common_loading_file"/>

</LinearLayout>